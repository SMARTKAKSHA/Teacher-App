<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ManageCurriculum"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Curriculum"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="#33ffc7"
        android:orientation="vertical"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Spinner
                android:id="@+id/course_Id"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:entries="@array/course_arrays"
                android:prompt="@string/course_promt"
                android:spinnerMode="dropdown"
                android:layout_marginHorizontal="20dp"

                />

            <Spinner
                android:id="@+id/concept_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/concept_arrays"

                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <Spinner
                android:id="@+id/sub_concept_Id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:entries="@array/sub_concept_arrays"
                android:prompt="@string/sub_concept_promt"
                android:spinnerMode="dropdown"
                android:layout_marginHorizontal="20dp"

                />




        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Next"
        android:onClick="openViewContent"

        />

</LinearLayout>
